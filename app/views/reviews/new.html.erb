<h1>New Review Form</h1>

<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

    <ul>
      <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="form"
  <%= form_for([@ride, @review]) do |f| %>

    <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
    </div>

    <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
    </div>

    <div class="field">
      <%= f.label :rating %><br />
      <%= f.select :rating, options_for_select(["1", "2", "3", "4", "5"]) %>
    </div>
    <%= f.submit "Add Review"%>
</div>
<% end %>
